<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/stylesheets/users.css">
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="/js/userRegisterValidation.js"></script>
    <script src="https://kit.fontawesome.com/3c9eeab8c1.js" crossorigin="anonymous"></script>
    <title>Perfil</title>
  </head>
  <body>
    <%- include('./partials/header') %>
    <main class="form-signin">
      <div class="form-create">
        <div class="form-title h5 mb-3 fw-bold">
          Bienvenid@ <%=loggedUser.nombre%>
        </div>
        <div class="form-group-ctr">
            <img class="profile-img" src="/images/profileImages/<%=loggedUser.avatar%>" alt="" />
        </div>
            <div class="profile-group">
            ID: <%=loggedUser.id%>
          </div>
          <div class="profile-group">
            Nombre: <%=loggedUser.nombre%>
          </div>
          <div class="profile-group">
            Apellido: <%=loggedUser.apellido%>
          </div>
          <div class="profile-group">
            Email: <%=loggedUser.email%>
          </div>
            <form method="post" action="/users/logout">
              <button class="btn-borrar w-100" type="submit">Log Out</button>
            </form>
            <br>
            <form method="get" action="/users/edit">
              <button class="btn-enviar w-100" type="submit">Edit</button>
            </form>
        </div>
      </div>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
