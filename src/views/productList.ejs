<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
        <link rel="stylesheet" href="/stylesheets/products.css">
        <link rel="stylesheet" href="/stylesheets/general.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <title>Productos</title>
    </head>
    <body>
    <%- include('./partials/header') %>
    <main class="products-maincontainer">
        <h1 class="form-create-title h5 mb-3 fw-bold"><%= title %></h1>
        <div class="products-box">
            <% for(i=0;i<products.length;i++) { %>
                <div class="products-viewcontainer">
                    <div class="products-trackcontainer">
                        <ul class="products-track">
                            <li class="products-trackslide">
                                <a href="/products/detail/<%=products[i].id%>">
                                    <img class="products-track-slide-image" src="/images/products/<%=products[i].imagenes[0].nombreArchivo%>" alt="">
                                    <ul class="products-detail">
                                        <li><%=products[i].nombre%></li>
                                        <li>AR$ <%=products[i].precio%></li>
                                        <li>Talle: <%=products[i].talle.descripcion%></li>
                                        <li>Color: <%=products[i].color.descripcion%></li>
                                        <li>Descripci√≥n: <%=products[i].descripcion%></li>
                                    </ul>
                                </a>
                                <a href="/users/carrito"><i class="far fa-thumbs-up"></i></a>
                                <i class="far fa-thumbs-down"></i>
                            </li>
                        </ul>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>
                                    
                                    
                                    
    
    
    
    
    




